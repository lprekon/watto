<% content_for :title, "Fields Admin: #{@field.field_name}" %>

<% content_for :breadcrumbs do %>
  <%= crumb "Admin", to: admin_path %>
  <%= crumb "Fields", to: admin_fields_path %>
  <%= crumb @field.field_name, active: true %>
<% end %>

<hr>

<div class="row">
  <div class="col">
    <h2>Field Attributes</h2>
    <div class="table-responsive">
      <table class="table table-striped table-sm">
        <thead>
          <tr>
            <th scope="col">Attribute</th>
            <th scope="col">Value</th>
          </tr>
        </thead>
        <tbody>
          <% [ :id,
               :url,
               :uid,
               :access,
               :description,
               :member_access,
               :member_only,
               :built_in,
               :support_search,
               :editable,
               :admin_only,
               :field_type,
               :field_name,
               :system,
               :field_instructions,
               :max_length,
               :order,
               :display_type,
               :system_code,
               :required,
               :created_at,
               :updated_at,
          ].each do |n| %>
          <tr>
            <td><%= n.to_s %></td>
            <td scope="col"><%= @field[n] %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="col">
    <h2>Allowed Values</h2>

    <% unless @field.field_allowed_values.empty? %>
      <div class="table-responsive">
        <table class="table table-striped table-sm">
          <thead>
            <tr>
              <th scope="col">Label</th>
              <th scope="col">Value</th>
              <th scope="col">Selected by Default</th>
            </tr>
          </thead>
          <tbody>

            <% @field.field_allowed_values.each do |v| %>
              <tr>
                <td><%= v.label %></td>
                <td><%= v.value %></td>
                <td><%= v.selected_by_default %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% end %>
  </div>
</div>
